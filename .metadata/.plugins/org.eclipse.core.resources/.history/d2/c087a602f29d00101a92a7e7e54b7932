package com.example.demo.controller;

import com.example.demo.model.Product;
import com.example.demo.service.ProductService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import java.util.List;

@RestController
@RequestMapping("/products")
public class ProductController {

    @Autowired
    private ProductService service;

    // Get all products
    @GetMapping
    public List<Product> getAll() {
        return service.getAll();
    }

    // Get product by ID
    @GetMapping("/{id}")
    public Product getById(@PathVariable Long id) {
        return service.getById(id);
    }

    // Create single product (explicit endpoint)
    @PostMapping("/single")
    public Product createSingle(@RequestBody Product product) {
        return service.create(product);
    }

    // Create multiple products (bulk insert)
    @PostMapping("/bulk")
    public List<Product> createBulk(@RequestBody List<Product> products) {
        return service.createBulk(products);
    }

    // Update product by ID
    @PutMapping("/{id}")
    public Product update(@PathVariable Long id, @RequestBody Product product) {
        return service.update(id, product);
    }

    // Delete product by ID
    @DeleteMapping("/{id}")
    public void delete(@PathVariable Long id) {
        service.delete(id);
    }
}
