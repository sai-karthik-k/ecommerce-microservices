spring.application.name=api-gateway
server.port=8080

# Eureka Server URL (make sure Eureka Server runs on port 8761)
eureka.client.service-url.defaultZone=http://localhost:8761/eureka/
eureka.instance.prefer-ip-address=true

# Routes
spring.cloud.gateway.routes[0].id=products-service
spring.cloud.gateway.routes[0].uri=lb://products-service
spring.cloud.gateway.routes[0].predicates[0]=Path=/products/**

spring.cloud.gateway.routes[1].id=order-service
spring.cloud.gateway.routes[1].uri=lb://order-service
spring.cloud.gateway.routes[1].predicates[0]=Path=/orders/**

# Basic Auth Configuration
spring.security.user.name=user
spring.security.user.password=password

springdoc.swagger-ui.use-root-path=true
springdoc.swagger-ui.urls[0].name=products-service
springdoc.swagger-ui.urls[0].url=/products/v3/api-docs
springdoc.swagger-ui.urls[1].name=order-service
springdoc.swagger-ui.urls[1].url=/orders/v3/api-docs